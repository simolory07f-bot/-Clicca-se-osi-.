<script>
  let clicked = false;
  document.body.addEventListener('click', () => {
    if (clicked) return; // blocca ulteriori click
    clicked = true;
    document.querySelector('h1').style.display = 'none';
    document.getElementById('scare').style.opacity = 1;
    document.getElementById('sound').play();
  });
</script>
